@page "/acceso-denegado"
@inject NavigationManager Navigation

<PageTitle>Acceso Denegado - Galería de Arte</PageTitle>

<div class="access-denied-container">
    <div class="access-denied-content">
        <div class="error-icon">
            <i class="fas fa-lock"></i>
        </div>
        <h1>Acceso Denegado</h1>
        <p class="lead">No tienes permisos para acceder a esta página.</p>
        <p>Si crees que esto es un error, contacta al administrador del sistema.</p>
        
        <div class="action-buttons">
            <button @onclick="GoBack" class="btn btn-secondary me-3">
                <i class="fas fa-arrow-left"></i>
                Volver
            </button>
            <a href="/" class="btn btn-primary">
                <i class="fas fa-home"></i>
                Ir al Inicio
            </a>
        </div>
    </div>
</div>

<style>
    .access-denied-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
        color: white;
        text-align: center;
        padding: 2rem;
    }

    .access-denied-content {
        max-width: 500px;
    }

    .error-icon {
        font-size: 5rem;
        margin-bottom: 2rem;
        opacity: 0.9;
    }

    .access-denied-content h1 {
        font-size: 3rem;
        font-weight: bold;
        margin-bottom: 1rem;
    }

    .access-denied-content .lead {
        font-size: 1.25rem;
        margin-bottom: 1rem;
    }

    .access-denied-content p {
        margin-bottom: 2rem;
        opacity: 0.9;
    }

    .action-buttons {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .btn {
        padding: 0.8rem 2rem;
        font-weight: 600;
        border-radius: 8px;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        text-decoration: none;
    }

    .btn-secondary {
        background-color: rgba(255, 255, 255, 0.2);
        border: 2px solid rgba(255, 255, 255, 0.3);
        color: white;
    }

    .btn-secondary:hover {
        background-color: rgba(255, 255, 255, 0.3);
        border-color: rgba(255, 255, 255, 0.5);
        transform: translateY(-2px);
    }

    .btn-primary {
        background-color: white;
        border: 2px solid white;
        color: #ff6b6b;
    }

    .btn-primary:hover {
        background-color: #f8f9fa;
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
    }
</style>

@code {
    private void GoBack()
    {
        Navigation.NavigateTo("/");
    }
}
