@page "/test-auth"
@inject AuthService AuthService
@using GaleriaArteFrontend.Services
@using GaleriaArteFrontend.Components

<PageTitle>Test de Autenticación</PageTitle>

<AuthGuard RequiereAutenticacion="true">
    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3>Panel de Usuario Autenticado</h3>
                    </div>
                    <div class="card-body">
                        <p><strong>Usuario:</strong> @AuthService.UsuarioActual?.Nickname</p>
                        <p><strong>Correo:</strong> @AuthService.UsuarioActual?.Correo</p>
                        <p><strong>Rol:</strong> @AuthService.UsuarioActual?.Rol</p>
                        <p><strong>Estado de autenticación:</strong> @(AuthService.EstaAutenticado ? "Autenticado" : "No autenticado")</p>
                        
                        <div class="mt-4">
                            <button @onclick="TestLogout" class="btn btn-danger">
                                <i class="fas fa-sign-out-alt"></i>
                                Cerrar Sesión
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</AuthGuard>

@code {
    private async Task TestLogout()
    {
        await AuthService.LogoutAsync();
    }
}
